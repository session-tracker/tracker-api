pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                echo 'Finished build..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh '#!/bin/bash
                    python3 -m venv ./venv/
                    source venv/bin/activate
                    pytest tests/api_tests.py'
                echo 'Finished tests.'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}